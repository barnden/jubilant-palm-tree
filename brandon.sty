    ]}%
    {\end{mdgeneric}}
\newcommand{\regenv}[5]{%
% Register new environment based on generic
    \newcounter{#1}[chapter]%
    % Reset counter with each chapter
    \newenvironment{#1*}[1][\unskip]{%
        \begin{generic*}{#2}{#3}{#4 ##1}{#5}}{\end{generic*}}%
    \newenvironment{#1}[1][\unskip]{%
        \begin{#1*}[\textbf{\the\value{chapter}.\the\value{#1}} \textmd{\textit{##1}}]%
        \addtocounter{#1}{1}%
        \label{#1\the\value{chapter}-\the\value{#1}}
    }{\end{#1*}}%
}

